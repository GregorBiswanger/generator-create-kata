{
    "exclude": [
        "node_modules",
        "specs"
    ],
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "stripInternal": true,
        "rootDir": "./src"
    }
}